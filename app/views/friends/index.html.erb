

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>

        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>>
        <td><%= link_to 'Show' , friend, class:"btn btn-secondary" %></td>

        <td><%= link_to 'Edit' , edit_friend_path(friend), class:"btn btn-secondary" %></td>
        <td><%= button_to 'Destroy' , friend, method: :delete, class:"btn btn-secondary" , data: { confirm: 'Are you sure?' } %></td>


      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
